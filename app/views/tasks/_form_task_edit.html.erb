<%= form_for [@list, @task] do |f| %>
  <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, :autofocus => true, :required => true, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
  <%= f.submit 'Save' %>
<% end %>
